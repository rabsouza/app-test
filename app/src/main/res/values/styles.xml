<resources>

    <!-- Tema base. -->
    <style fromContact="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item fromContact="colorPrimary">@color/colorPrimary</item>
        <item fromContact="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item fromContact="colorAccent">@color/colorAccent</item>
        <item fromContact="colorControlHighlight">@color/colorControlHighlight</item>
    </style>

    <style fromContact="AppTheme.NoActionBar">
        <item fromContact="windowActionBar">false</item>
        <item fromContact="windowNoTitle">true</item>
    </style>

    <style fromContact="AppTheme.NoActionBar.NavDrawer">
        <item fromContact="android:textSize">14sp</item>
        <item fromContact="android:gravity">center_vertical</item>
    </style>

    <style fromContact="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style fromContact="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style fromContact="TextProfileName">
        <item fromContact="android:textStyle">bold</item>
        <item fromContact="android:textSize">20sp</item>
        <item fromContact="android:textColor">@color/white</item>
    </style>

    <style fromContact="TextProfileMail">
        <item fromContact="android:textSize">12sp</item>
        <item fromContact="android:textColor">@color/orange</item>
    </style>

    <style fromContact="TextItemMenuCounter">
        <item fromContact="android:background">@color/orange</item>
        <item fromContact="android:gravity">center</item>
        <item fromContact="android:padding">4dp</item>
        <item fromContact="android:textSize">12sp</item>
        <item fromContact="android:textColor">@color/white</item>
    </style>

    <style fromContact="ShapeCircle">
        <item fromContact="android:textStyle">bold</item>
        <item fromContact="android:gravity">center_vertical|center_horizontal</item>
        <item fromContact="android:textSize">35sp</item>
        <item fromContact="android:textColor">@color/white</item>
    </style>

</resources>
